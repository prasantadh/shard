
git clone git://git.kernel.org/pub/scm/linux/kernel/git/stable/linux-stable.git
cd linux-stable
git checkout v4.15

./set_shard_work_dir_path
cp ../*.c arch/x86/kvm/.
cp ../*.h arch/x86/kvm/.
cp $SHARD_WORK_DIR/guest_addrs.h arch/x86/kvm/.

cp ../v4.15-config .config

make -j $(nproc)

sudo make -j $(nproc) modules_install

sudo make install
